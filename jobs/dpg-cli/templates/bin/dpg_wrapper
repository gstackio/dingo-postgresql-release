#!/usr/bin/env bash

# This file was installed by /var/vcap/jobs/dpg-cli/bin/ctl
# It makes it simple to have access to /var/vcap/packages/dpg-cli/bin/dpg
# and all the dependencies that are also installed as packages.

debug_flag=$(echo "$-" | sed 's/[^x]//g')

set +x

LD_LIBRARY_PATH=${LD_LIBRARY_PATH:-''} # default to empty
for package_dir in $(find /var/vcap/packages -mindepth 1 -maxdepth 1); do
  has_busybox=0
  # Add all packages' /bin & /sbin into $PATH
  for package_bin_dir \
    in $(find -L "${package_dir}" -mindepth 1 -maxdepth 1 -type d -name "*bin")
  do
    # Do not add any packages that use busybox, as impacts builtin commands and
    # is often used for different architecture (via containers)
    if [[ -f ${package_bin_dir}/busybox ]]; then
      has_busybox=1
    else
      PATH=${package_bin_dir}:$PATH
    fi
  done
  if [[ $has_busybox == 0 && -d ${package_dir}/lib ]]; then
    LD_LIBRARY_PATH="${package_dir}/lib:${LD_LIBRARY_PATH}"
  fi
done

if [[ -n $debug_flag ]]; then
  set -x
fi

export PATH=$PATH
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH

bash ${debug_flag:+-$debug_flag} /var/vcap/packages/dpg-cli/bin/dpg "$@"
